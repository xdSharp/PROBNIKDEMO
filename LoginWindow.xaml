<Window x:Class="AllForLife.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="200" Width="300">
    <Grid Background="White">
        <StackPanel Margin="10">
            <TextBlock Text="Логин" FontSize="14" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,5"/>
            <TextBlock Text="Пароль" FontSize="14" FontFamily="Comic Sans MS"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>
            <Button Content="Войти" Click="LoginButton_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>