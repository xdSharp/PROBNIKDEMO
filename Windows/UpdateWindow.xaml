<Window x:Class="YourNamespace.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара" Height="400" Width="600">
    <Grid Background="White">
        <StackPanel Margin="10">
            <TextBlock Text="Редактирование товара" FontSize="24" FontFamily="Comic Sans MS"/>
            <TextBlock Text="Артикул" FontSize="14" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="ArticleTextBox" IsReadOnly="True" Margin="0,5"/>
            <TextBlock Text="Наименование" FontSize="14" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="NameTextBox" Margin="0,5"/>
            <TextBlock Text="Категория" FontSize="14" FontFamily="Comic Sans MS"/>
            <ComboBox x:Name="CategoryComboBox" Margin="0,5">
                
            </ComboBox>
            <TextBlock Text="Количество на складе" FontSize="14" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="StockTextBox" Margin="0,5"/>
            <TextBlock Text="Стоимость за единицу" FontSize="14" FontFamily="Comic Sans MS"/>
            <TextBox x:Name="PriceTextBox" Margin="0,5"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Margin="0,10"/>
            <Button Content="Удалить" Click="DeleteButton_Click" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>